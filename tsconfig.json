{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@commands/*": ["commands/*"],
      "@handlers/*": ["handlers/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"]
}